<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_main_kor"
        android:layout_width="125dp"
        android:layout_height="110dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="4dp"
        android:autoText="false"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="한글"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_main_enroll"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txt_main_eng"
        android:layout_width="125dp"
        android:layout_height="110dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="Eng"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_main_enroll"
        app:layout_constraintEnd_toStartOf="@+id/txt_main_kor"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_main_search"
        android:layout_width="210dp"
        android:layout_height="57dp"
        android:ems="10"
        android:hint="입력하세요"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txt_main_eng"
        app:layout_constraintEnd_toStartOf="@+id/image_main_search"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />

    <ImageButton
        android:id="@+id/image_main_search"
        android:layout_width="60dp"
        android:layout_height="54dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_main_eng"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.494"
        app:srcCompat="@android:drawable/ic_search_category_default" />

    <Button
        android:id="@+id/btn_main_enroll"
        android:layout_width="248dp"
        android:layout_height="82dp"
        android:layout_marginBottom="216dp"
        android:text="단어장 등록"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>